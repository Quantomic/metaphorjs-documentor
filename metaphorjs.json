{
    "version": "0.1",
    "description": "MetaphorJs Documentor",

    "npm": false,
    "push": [
        "github"
    ],


    "mixin": {
        "default": {
            "files": [
                ["src/**", {"as": "*"}]
            ]
        }
    },

    "docs": {
        "": {
            "out": "docs",
            "src": [
                "src/**"
            ],
            "includeExternal": false,
            "renderer": "default",
            "init": "assets/self-doc.js",
            "data": {
                "title": "MetaphorJs.Documentor"
            },
            "options": {

            }
        }
    },

    "build": {
        "npm": {
            "auto": true,
            "target": "dist/metaphorjs.documentor.npm.js",
            "compile": false,
            "files": ["default"],
            "exports": "Documentor",
            "exposeIn": "Documentor",
            "expose": [
                "Renderer",
                "Item",
                "Base",
                "SourceFile",
                "Comment",
                "Runner",
                {"name": "globalCache", "as": "hooks"}
            ]
        }
    }
}